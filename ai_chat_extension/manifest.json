{
  "manifest_version": 3,
  "name": "GlotBrowser AI",
  "version": "1.0.0",
  "key": "",
  "description": "Built-in AI Chat interface for automation.",
  "icons": {
    "16": "icons/Logo glot.png",
    "48": "icons/Logo glot.png",
    "128": "icons/Logo glot.png",
    "256": "icons/Logo glot.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "sidePanel", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/Logo glot.png",
      "48": "icons/Logo glot.png",
      "128": "icons/Logo glot.png"
    },
    "default_title": "GlotBrowser AI"
  },
  "side_panel": { "default_path": "panel.html" },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css", "panel.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://127.0.0.1:8000 http://localhost:8000"
  }
}
